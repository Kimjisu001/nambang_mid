<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
       
<tiles-definitions>
	<definition name="temp" template="/WEB-INF/layout/template.jsp">
		<put-attribute name="title" value="tempTitle"/>
		<put-attribute name="header" value="/WEB-INF/layout/header.jsp"/>
		<put-attribute name="background" value="/WEB-INF/layout/background.jsp"/>
		<put-attribute name="body" value="/WEB-INF/layout/body.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/layout/footer.jsp"/>
	</definition>
	
	<definition name="WILDCARD:shop/*" extends="temp">
		<!-- <put-attribute name="hsection" value="/WEB-INF/shop/{1}.jsp"/> -->
		<put-attribute name="background" value="/WEB-INF/shop/{1}.jsp"/>
	</definition>
	
</tiles-definitions>